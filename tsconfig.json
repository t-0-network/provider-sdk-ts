{
  "compilerOptions": {
    "target": "ESNext",
    "rootDirs": ["src", "examples"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./lib",
    "declaration": true,
    "declarationMap": false
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "lib",
  ]
}
