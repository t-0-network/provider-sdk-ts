{
  "compilerOptions": {
    "target": "ES2020",
    "rootDirs": ["src"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "incremental": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./lib",
    "declaration": true,
    "declarationMap": false,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
